= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  #post-input
  .field
    = f.text_field :title, placeholder: "Question title..."
  .field
    = f.text_area :content, :size => '30x5', placeholder: "Question explaination (optional). You can also add an image if it helps...."
  .field
    = f.label :category
    = f.select :category, options_for_select(%w{ Communications Consultancy General HR Marketing Teaching})
  .field
    = f.label :image
    = f.file_field :image
  .actions
    %input{:type => "submit", :value => "Submit", :class => "button", :id => "post_submit", :content => :content, :name => 'submit'}
