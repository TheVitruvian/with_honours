%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %div
    = f.label :company_name
    %br/
    = f.text_field :user_name, :autofocus => true
  %div
    = f.label "Description"
    %br/
    = f.text_area :biography, :class => 'ckeditor', :ckeditor => {:toolbar => "Normal"}, placeholder: "Tell us about the company, what you're looking for, your markets, values, be as detailed as you like!"
  %div
    = f.label :email
    %br/
    = f.email_field :email
  %div
    = f.label :password
    %br/
    = f.password_field :password
  %div
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %div
    = f.label :logo
    %br/
    = f.file_field :logo
  %div= f.submit "Sign up"
= render "companies/shared/links"
