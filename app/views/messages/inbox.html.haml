.row
  #inbox-contacts.col-md-3
    - if @company_contact_list.present?
      %h4 Company Contacts
      %ul.contacts-list
        - @company_contact_list.each do |contact|
          %li= link_to contact.user_name, conversation_path(contact.id)+ "?class=Company", {:class => 'inbox-conversation-link'}
    - if @user_contact_list.present?
      %h4 Grad Contacts
      %ul.contacts-list
        - @user_contact_list.each do |contact|
          %li= link_to contact.user_name, conversation_path(contact.id), {:class => 'inbox-conversation-link'}
    -if @company_contact_list.blank? && @user_contact_list.blank?
      %h4 No messages yet

  #inbox-message-container.col-md-9