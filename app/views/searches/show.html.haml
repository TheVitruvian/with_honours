%section.container
  .row
    .col-md-2.profile
      -if @current_agent
        - if @current_agent.class.to_s == "Company" && @current_agent.logo.present?
          = image_tag @current_agent.logo, class: "logo"
        -elsif @current_agent.class.to_s == "User" && @current_agent.profile_picture.present?
          = image_tag @current_agent.profile_picture, class: "logo"
        %br/
        %p= link_to "#{@current_agent.user_name}", @current_agent, id: "current-user"
        %p
          %span Questions score: 
          %span#qu-score= @current_agent.questions_score
        %p
          %span Answers score: 
          %span#ans-score= @current_agent.answers_score
        %p
          %span Voting score:
          %span#voting-score= @votes
    .col-md-7.col-md-offset-2
      - @search.users.each do |user|
        %ul
          %li= link_to user.user_name, user
          = user.degree_classification if user.degree_classification.present?
          
          = user.degree_classification if user.degree_title.present?
          
          = user.university.name unless user.university == nil

