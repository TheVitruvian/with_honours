= form_for @search do |f|
  .form
    .form-group
      = f.label :keywords
      = f.text_field :keywords, class: 'form-control'
    .form-group
      = f.label :category
      = f.text_field :category, class: 'form-control'
    .form-group
      = f.label :questions_score
      = f.number_field :questions_score, class: 'form-control'
    .form-group
      = f.label :answers_score
      = f.number_field :answers_score, class: 'form-control'
    .form-group
      = f.label :comments_score
      = f.number_field :comments_score, class: 'form-control'
    .form-group
      = f.label "University(ies) - hold ctrl/cmd to select multiple"
      = f.select :university, University.all.map {|r| [r.name,r.id] }, {},{:multiple => true, size: 20, class: 'form-control', include_blank: true }
    .form-group
      = f.label "Degree Score"
      = f.select :degree_score, options_for_select(%w{ 1st 2:1 2:2 3rd Pass }),{}, {multiple: true, size: 2, include_blank: true, class: 'form-control'}
    .form-group
      = f.label :degree_achieved
      = f.check_box :degree_achieved
    .form-group
      = f.label :degree_classification
      = f.select :degree_classification, options_for_select(%w{ BA BSc BEng MA MSc MEng LLM MBA PhD }),{},{ multiple: true, size: 2, class: 'form-control'}
      %br/
      = f.submit "Search", class: 'btn btn-primary btn-block'






